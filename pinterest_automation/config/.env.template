# Pinterest API Credentials
PINTEREST_APP_ID=your_app_id_here
PINTEREST_APP_SECRET=your_app_secret_here
PINTEREST_ACCESS_TOKEN=your_access_token_here
PINTEREST_REFRESH_TOKEN=your_refresh_token_here

# Pinterest Board IDs (comma-separated if multiple)
PINTEREST_BOARD_IDS=board_id_1,board_id_2

# API Settings
PINTEREST_API_URL=https://api.pinterest.com/v5

# Scheduling Settings
# Format: cron expression (minute hour day_of_month month day_of_week)
PIN_CREATION_SCHEDULE=0 9 * * *  # Daily at 9:00 AM
ANALYTICS_COLLECTION_SCHEDULE=0 5 * * *  # Daily at 5:00 AM

# Limits
MAX_PINS_PER_DAY=5
MAX_PINS_PER_BOARD_PER_DAY=2

# Paths
IMAGE_FOLDER=../data/images
ANALYTICS_OUTPUT=../data/analytics

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
